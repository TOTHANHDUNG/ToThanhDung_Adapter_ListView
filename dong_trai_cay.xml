<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF7F7">

    <ImageView
        android:id="@+id/imgViewHinh"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textViewTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imgViewHinh"
        android:text="Ten"
        android:textColor="#ff00"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewMota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTen"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imgViewHinh"
        android:text="Mo ta"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textViewTien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@id/imgViewHinh"
        android:text="Tien"
        android:textColor="#3F51B5"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imgViewHinh"
        android:background="@drawable/style_button_tang_giam"
        android:gravity="center"
        android:text="+"
        android:textStyle="bold" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/imgViewHinh"
        android:background="@drawable/style_button_tang_giam"
        android:gravity="center"
        android:text="-"
        android:textStyle="bold" />

</RelativeLayout>